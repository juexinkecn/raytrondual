# 网站配置
PUBLIC_SITE_URL_EN=https://en.raytron.group
PUBLIC_SITE_URL_CN=https://cn.raytron.group

PUBLIC_SITE_NAME=RAYTRON

# 邮件服务 (SendGrid/Resend/AWS SES)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@raytron.group
SENDGRID_TO_EMAIL=sales@raytron.group

# reCAPTCHA
PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Google Analytics
PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# 百度统计 (中文站)
PUBLIC_BAIDU_ANALYTICS_ID=your_baidu_id_here

# Google Tag Manager (可选)
PUBLIC_GTM_ID=GTM-XXXXXXX

# CRM集成 (可选 - HubSpot/Salesforce)
CRM_ENABLED=false
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_PORTAL_ID=your_portal_id_here

# Vercel Analytics (自动启用)
# 无需配置

# 开发环境
NODE_ENV=development
