---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/forms/ContactForm';

const pageTitle = 'Contact Us - Raytron Flat Wire Solutions';
const pageDescription = 'Get in touch with Raytron for inquiries about flat wire products, technical support, quotes, or partnership opportunities. Our team is ready to assist you.';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  lang="en"
>
  {/* Page Header */}
  <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Contact Us
        </h1>
        <p class="text-xl text-blue-100">
          Have questions? Our team is here to help with your flat wire requirements
        </p>
      </div>
    </div>
  </section>

  {/* Contact Form Section */}
  <section class="py-16">
    <div class="container mx-auto px-4">
      <ContactForm client:load lang="en" />
    </div>
  </section>

  {/* Map Section (Optional) */}
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">
        Visit Our Facility
      </h2>
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          {/* Map Placeholder */}
          <div class="h-96 bg-gray-200 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p class="text-gray-600">Map Integration Available</p>
                <p class="text-sm text-gray-500 mt-2">Shenzhen, Guangdong, China</p>
              </div>
            </div>
          </div>
          
          {/* Location Details */}
          <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Headquarters</h3>
                <p class="text-gray-600">
                  Raytron Industrial Park<br />
                  Shenzhen, Guangdong<br />
                  China, 518000
                </p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Business Hours</h3>
                <p class="text-gray-600">
                  Monday - Friday<br />
                  8:00 AM - 6:00 PM<br />
                  China Standard Time (CST)
                </p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Get Directions</h3>
                <a href="#" class="text-blue-600 hover:text-blue-700 font-semibold">
                  Open in Maps →
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Alternative Contact Methods */}
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Other Ways to Reach Us
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {/* Sales */}
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Sales Inquiries</h3>
          <p class="text-gray-600 mb-4">For quotes and product information</p>
          <a href="mailto:sales@raytron.co" class="text-blue-600 hover:text-blue-700 font-semibold">
            sales@raytron.co
          </a>
        </div>

        {/* Technical */}
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Technical Support</h3>
          <p class="text-gray-600 mb-4">For technical questions and guidance</p>
          <a href="mailto:tech@raytron.co" class="text-green-600 hover:text-green-700 font-semibold">
            tech@raytron.co
          </a>
        </div>

        {/* General */}
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">General Inquiries</h3>
          <p class="text-gray-600 mb-4">For other questions and feedback</p>
          <a href="mailto:info@raytron.co" class="text-purple-600 hover:text-purple-700 font-semibold">
            info@raytron.co
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Response Time Banner */}
  <section class="py-12 bg-blue-600">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-white mb-4">
          ⚡ Fast Response Guarantee
        </h2>
        <p class="text-xl text-blue-100">
          We typically respond to all inquiries within 24 hours during business days. For urgent matters, please call us directly.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
