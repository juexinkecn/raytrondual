---
import Button from '../ui/Button.astro';
import Badge from '../ui/Badge.astro';
import Breadcrumb from '../navigation/Breadcrumb.astro';
import type { Translations } from '../../types';

interface Props {
  lang: 'en' | 'zh';
  productName: string;
  productNameZh: string;
  category: string;
  categoryZh: string;
  description: string;
  descriptionZh: string;
  keySpecs: Array<{ label: string; labelZh: string; value: string }>;
  features: Array<string>;
  featuresZh: Array<string>;
  image?: string;
  popular?: boolean;
}

const { 
  lang, 
  productName, 
  productNameZh,
  category,
  categoryZh,
  description, 
  descriptionZh,
  keySpecs,
  features,
  featuresZh,
  image = 'default',
  popular = false
} = Astro.props;

const t: Translations = {
  en: {
    category: 'Product Category',
    requestQuote: 'Request Quote',
    downloadSpec: 'Download Specs',
    keySpecifications: 'Key Specifications',
    keyFeatures: 'Key Features',
    popular: 'Popular Choice'
  },
  zh: {
    category: '产品类别',
    requestQuote: '索取报价',
    downloadSpec: '下载规格',
    keySpecifications: '关键规格',
    keyFeatures: '主要特点',
    popular: '热门选择'
  }
};

const content = t[lang];
const displayName = lang === 'en' ? productName : productNameZh;
const displayCategory = lang === 'en' ? category : categoryZh;
const displayDescription = lang === 'en' ? description : descriptionZh;
const displayFeatures = lang === 'en' ? features : featuresZh;

// Color schemes for different product types
const colorSchemes: Record<string, string> = {
  copper: 'from-orange-500 to-red-500',
  aluminum: 'from-gray-400 to-gray-600',
  bimetal: 'from-yellow-500 to-orange-500',
  coated: 'from-purple-500 to-pink-500',
  enameled: 'from-green-500 to-teal-500',
  specialty: 'from-blue-500 to-indigo-600',
  default: 'from-blue-500 to-blue-600'
};

const gradientClass = colorSchemes[image] || colorSchemes.default;
---

<section class="relative bg-gradient-to-br from-gray-50 to-gray-100 py-12">
  <div class="container mx-auto px-4">
    <!-- Breadcrumb -->
    <div class="mb-8">
      <Breadcrumb lang={lang} />
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Product Image/Visual -->
      <div class="relative">
        <div class="relative bg-white rounded-3xl p-8 shadow-xl">
          <!-- Product Visual with Gradient -->
          <div class={`relative h-96 bg-gradient-to-br ${gradientClass} rounded-2xl overflow-hidden`}>
            <!-- Pattern Overlay -->
            <div class="absolute inset-0 opacity-20">
              <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255,255,255,.1) 10px, rgba(255,255,255,.1) 20px);"></div>
            </div>

            <!-- Metal Wire Visualization -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="relative w-full h-full flex items-center justify-center">
                <!-- Coil rings -->
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-64 h-64 border-8 border-white/30 rounded-full"></div>
                </div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-48 h-48 border-8 border-white/40 rounded-full"></div>
                </div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-32 h-32 border-8 border-white/50 rounded-full"></div>
                </div>
                
                <!-- Center icon -->
                <div class="relative z-10 w-24 h-24 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-2xl">
                  <svg class="w-12 h-12 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Popular Badge -->
            {popular && (
              <div class="absolute top-4 right-4">
                <Badge variant="warning" class="shadow-lg text-sm font-bold">
                  ⭐ {content.popular}
                </Badge>
              </div>
            )}
          </div>

          <!-- Quick Specs Below Image -->
          <div class="mt-6 grid grid-cols-2 gap-4">
            {keySpecs.slice(0, 4).map(spec => (
              <div class="bg-gray-50 rounded-xl p-4 text-center border border-gray-200">
                <div class="text-sm text-gray-600 mb-1">
                  {lang === 'en' ? spec.label : spec.labelZh}
                </div>
                <div class="text-lg font-bold text-gray-900">{spec.value}</div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Right: Product Info -->
      <div class="space-y-6">
        <!-- Category Badge -->
        <div>
          <Badge variant="info" class="text-sm font-semibold">
            {content.category}: {displayCategory}
          </Badge>
        </div>

        <!-- Product Name -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          {displayName}
        </h1>

        <!-- Description -->
        <p class="text-xl text-gray-600 leading-relaxed">
          {displayDescription}
        </p>

        <!-- Key Features -->
        <div>
          <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            {content.keyFeatures}
          </h3>
          <ul class="space-y-3">
            {displayFeatures.map(feature => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 pt-4">
          <Button 
            href={lang === 'en' ? '/en/contact?type=quote' : '/zh/contact?type=quote'}
            variant="primary"
            size="large"
            class="shadow-xl hover:shadow-2xl"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            {content.requestQuote}
          </Button>
          
          <Button 
            href="#"
            variant="outline"
            size="large"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            {content.downloadSpec}
          </Button>
        </div>

        <!-- Contact Info -->
        <div class="pt-6 border-t border-gray-200">
          <p class="text-sm text-gray-600 mb-3">
            {lang === 'en' 
              ? 'Need custom specifications? Our technical team is ready to help.' 
              : '需要定制规格？我们的技术团队随时准备提供帮助。'}
          </p>
          <div class="flex items-center gap-6">
            <a href={`mailto:sales@raytron.co`} class="flex items-center text-blue-600 hover:text-blue-700 font-semibold">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              sales@raytron.co
            </a>
            <a href="tel:+862112345678" class="flex items-center text-blue-600 hover:text-blue-700 font-semibold">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              +86 (21) 1234-5678
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
