---
/**
 * 通用徽章组件
 * 用于标签、状态指示器、计数等
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'danger' | 'info' | 'neutral';
  size?: 'sm' | 'md' | 'lg';
  rounded?: 'default' | 'full' | 'none';
  icon?: string; // 可选图标
  dot?: boolean; // 显示圆点而不是内容
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  rounded = 'default',
  icon,
  dot = false,
  class: className = '',
} = Astro.props;

// 基础样式
const baseStyles = 'inline-flex items-center justify-center gap-1 font-medium transition-colors duration-200';

// 变体样式（颜色）
const variantStyles = {
  primary: 'bg-blue-100 text-blue-800 border border-blue-200',
  secondary: 'bg-gray-100 text-gray-800 border border-gray-200',
  success: 'bg-green-100 text-green-800 border border-green-200',
  warning: 'bg-yellow-100 text-yellow-800 border border-yellow-200',
  danger: 'bg-red-100 text-red-800 border border-red-200',
  info: 'bg-cyan-100 text-cyan-800 border border-cyan-200',
  neutral: 'bg-slate-100 text-slate-800 border border-slate-200',
};

// 尺寸样式
const sizeStyles = {
  sm: dot ? 'w-2 h-2' : 'px-2 py-0.5 text-xs',
  md: dot ? 'w-2.5 h-2.5' : 'px-2.5 py-1 text-sm',
  lg: dot ? 'w-3 h-3' : 'px-3 py-1.5 text-base',
};

// 圆角样式
const roundedStyles = {
  default: 'rounded-md',
  full: 'rounded-full',
  none: 'rounded-none',
};

// 组合所有样式
const badgeClasses = [
  baseStyles,
  variantStyles[variant],
  sizeStyles[size],
  roundedStyles[rounded],
  dot ? 'border-0' : '',
  className,
].filter(Boolean).join(' ');
---

{dot ? (
  <span class={badgeClasses} aria-label="Status indicator"></span>
) : (
  <span class={badgeClasses}>
    {icon && (
      <span class="w-4 h-4" set:html={icon} />
    )}
    <slot />
  </span>
)}

<style>
  /* 确保徽章文本不换行 */
  span {
    white-space: nowrap;
  }
  
  /* 为圆点徽章添加脉冲动画（可选） */
  span.animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
