---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import Features from '../components/home/Features.astro';
import ProductsShowcase from '../components/home/ProductsShowcase.astro';
import ApplicationsOverview from '../components/home/ApplicationsOverview.astro';
import WhyChooseUs from '../components/home/WhyChooseUs.astro';
import CTASection from '../components/home/CTASection.astro';

const pageTitle = 'High-Precision Flat Wire & Ribbon Manufacturer | Raytron';
const pageDescription = 'Leading manufacturer of copper, aluminum, and specialty metal flat wire with width-to-thickness ratio up to 100:1. Serving solar, battery, automotive, and aerospace industries since 2012.';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  lang="en"
>
  <!-- Hero Section -->
  <Hero lang="en" />

  <!-- Core Features -->
  <Features lang="en" />

  <!-- Products Showcase -->
  <ProductsShowcase lang="en" />

  <!-- Applications Overview -->
  <ApplicationsOverview lang="en" />

  <!-- Why Choose Us -->
  <WhyChooseUs lang="en" />

  <!-- CTA Section -->
  <CTASection lang="en" />
</BaseLayout>
