---
// src/pages/about.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import WhyChooseUs from '../components/home/WhyChooseUs.astro';
import CTASection from '../components/home/CTASection.astro';

const pageTitle = 'About Raytron - Leading Flat Wire Manufacturer Since 2012';
const pageDescription = 'Learn about Raytron\'s journey as China\'s premier flat wire manufacturer. Discover our commitment to innovation, quality, and customer service in metal strip production.';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  lang="en"
>
  {/* Hero Section */}
  <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          About Raytron
        </h1>
        <p class="text-xl text-blue-100 mb-8">
          Leading manufacturer of high-precision flat wire and metal ribbons since 2012
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3">
            <div class="text-3xl font-bold">2012</div>
            <div class="text-sm text-blue-100">Founded</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3">
            <div class="text-3xl font-bold">19,000+</div>
            <div class="text-sm text-blue-100">Tons/Year Capacity</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3">
            <div class="text-3xl font-bold">100:1</div>
            <div class="text-sm text-blue-100">Max Width-Thickness Ratio</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3">
            <div class="text-3xl font-bold">13</div>
            <div class="text-sm text-blue-100">Production Lines</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Company Story */}
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Our Story</h2>
        
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 mb-6">
            Founded in 2012, Raytron has grown from a small workshop to become China's leading manufacturer of high-precision flat wire and metal ribbons. We are the only company in China capable of producing flat wire with a width-to-thickness ratio of up to 100:1, a testament to our technological leadership and manufacturing excellence.
          </p>
          
          <p class="text-gray-700 mb-6">
            Our journey began with a simple vision: to provide the highest quality flat wire products for emerging industries like solar energy and electric vehicles. Today, we serve customers across eight major industries, from solar PV and battery manufacturing to aerospace and medical engineering.
          </p>
          
          <p class="text-gray-700 mb-6">
            With 13 state-of-the-art 4-high rolling mills and an annual production capacity of 19,000 tons, we combine advanced technology with rigorous quality control to deliver products that exceed international standards. Our ISO 9001:2015 certification and status as a National High-Tech Enterprise reflect our commitment to excellence.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* Mission & Values */}
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Our Mission & Values</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {/* Mission */}
          <div class="bg-white rounded-xl shadow-lg p-8">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Our Mission</h3>
            <p class="text-gray-600">
              To advance global industries through innovative flat wire solutions that enable cleaner energy, more efficient transportation, and breakthrough technologies.
            </p>
          </div>

          {/* Vision */}
          <div class="bg-white rounded-xl shadow-lg p-8">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-6">
