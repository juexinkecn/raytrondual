  <script>
    // FAQ äº¤äº’åŠŸèƒ½
    const faqItems = document.querySelectorAll('.faq-item');
    const categoryTabs = document.querySelectorAll('.category-tab');
    const faqCategories = document.querySelectorAll('.faq-category');
    const searchInput = document.getElementById('faqSearch');
    const noResults = document.getElementById('noResults');

    // ç‚¹å‡»å±•å¼€/æ”¶èµ·FAQ
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question?.addEventListener('click', () => {
        const isActive = item.classList.contains('active');
        
        // å…³é—­æ‰€æœ‰å…¶ä»–çš„FAQ
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
          }
        });
        
        // åˆ‡æ¢å½“å‰FAQ
        item.classList.toggle('active', !isActive);
      });
    });

    // åˆ†ç±»åˆ‡æ¢
    categoryTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const categoryId = tab.dataset.category;
        
        // æ›´æ–°æ ‡ç­¾æ ·å¼
        categoryTabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        // æ›´æ–°å†…å®¹æ˜¾ç¤º
        faqCategories.forEach(cat => {
          cat.classList.remove('active');
          if (cat.dataset.categoryContent === categoryId) {
            cat.classList.add('active');
          }
        });
        
        // æ¸…ç©ºæœç´¢
        if (searchInput) {
          searchInput.value = '';
        }
        
        // é‡ç½®FAQé¡¹æ˜¾ç¤º
        faqItems.forEach(item => {
          item.style.display = 'block';
        });
        
        noResults.style.display = 'none';
      });
    });

    // æœç´¢åŠŸèƒ½
    searchInput?.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase().trim();
      let visibleCount = 0;
      
      if (searchTerm === '') {
        // å¦‚æœæœç´¢ä¸ºç©ºï¼Œæ˜¾ç¤ºå½“å‰æ¿€æ´»åˆ†ç±»çš„æ‰€æœ‰FAQ
        const activeCategory = document.querySelector('.faq-category.active');
        faqItems.forEach(item => {
          if (activeCategory?.contains(item)) {
            item.style.display = 'block';
            visibleCount++;
          } else {
            item.style.display = 'none';
          }
        });
      } else {
        // åœ¨æ‰€æœ‰FAQä¸­æœç´¢
        faqCategories.forEach(cat => cat.classList.add('active'));
        
        faqItems.forEach(item => {
          const text = item.dataset.faqText || '';
          if (text.includes(searchTerm)) {
            item.style.display = 'block';
            visibleCount++;
          } else {
            item.style.display = 'none';
          }
        });
      }
      
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    });
