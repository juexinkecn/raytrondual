---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import type { Translations } from '../../types';

interface SpecCategory {
  title: string;
  titleZh: string;
  icon: string;
  specs: Array<{
    label: string;
    labelZh: string;
    value: string;
    unit?: string;
  }>;
}

interface Props {
  lang: 'en' | 'zh';
  categories: SpecCategory[];
  materialComposition?: {
    title: string;
    titleZh: string;
    elements: Array<{ element: string; percentage: string }>;
  };
  tolerances?: {
    title: string;
    titleZh: string;
    items: Array<{ parameter: string; parameterZh: string; tolerance: string }>;
  };
  certifications?: string[];
}

const { 
  lang, 
  categories,
  materialComposition,
  tolerances,
  certifications = []
} = Astro.props;

const t: Translations = {
  en: {
    sectionTitle: 'Technical Specifications',
    sectionSubtitle: 'Detailed Product Parameters',
    downloadPdf: 'Download PDF',
    requestCustom: 'Request Custom Specs',
    materialComposition: 'Material Composition',
    tolerances: 'Manufacturing Tolerances',
    certifications: 'Certifications & Standards',
    note: 'Note',
    noteText: 'Custom specifications available upon request. Contact our technical team for detailed engineering support.',
    tableHeaders: {
      parameter: 'Parameter',
      value: 'Value/Range',
      unit: 'Unit'
    }
  },
  zh: {
    sectionTitle: '技术规格',
    sectionSubtitle: '详细产品参数',
    downloadPdf: '下载PDF',
    requestCustom: '索取定制规格',
    materialComposition: '材料成分',
    tolerances: '制造公差',
    certifications: '认证与标准',
    note: '注意',
    noteText: '可根据要求提供定制规格。请联系我们的技术团队获取详细的工程支持。',
    tableHeaders: {
      parameter: '参数',
      value: '数值/范围',
      unit: '单位'
    }
  }
};

const content = t[lang];

// Icon paths for different categories
const iconPaths: Record<string, string> = {
  dimensions: 'M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01',
  physical: 'M13 10V3L4 14h7v7l9-11h-7z',
  electrical: 'M13 10V3L4 14h7v7l9-11h-7z',
  mechanical: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z',
  thermal: 'M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z',
  surface: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  coating: 'M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343',
  packaging: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4'
};
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {content.sectionTitle}
      </h2>
      <p class="text-xl text-gray-600">
        {content.sectionSubtitle}
      </p>
    </div>

    <!-- Specification Categories Grid -->
    <div class="grid md:grid-cols-2 gap-8 mb-12">
      {categories.map((category, index) => (
        <Card variant="default" class="p-6 hover:shadow-xl transition-shadow">
          <!-- Category Header -->
          <div class="flex items-center gap-4 mb-6 pb-4 border-b border-gray-200">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[category.icon] || iconPaths.dimensions}/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">
              {lang === 'en' ? category.title : category.titleZh}
            </h3>
          </div>

          <!-- Specifications Table -->
          <div class="space-y-3">
            {category.specs.map(spec => (
              <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
                <span class="text-gray-700 font-medium">
                  {lang === 'en' ? spec.label : spec.labelZh}
                </span>
                <span class="text-gray-900 font-bold">
                  {spec.value}
                  {spec.unit && <span class="text-sm text-gray-600 ml-1">{spec.unit}</span>}
                </span>
              </div>
            ))}
          </div>
        </Card>
      ))}
    </div>

    <!-- Material Composition (if provided) -->
    {materialComposition && (
      <div class="mb-12">
        <Card variant="default" class="p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
            {lang === 'en' ? materialComposition.title : materialComposition.titleZh}
          </h3>
          
          <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4">
            {materialComposition.elements.map(element => (
              <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4 text-center">
                <div class="text-3xl font-bold text-blue-600 mb-1">{element.element}</div>
                <div class="text-lg text-gray-700">{element.percentage}</div>
              </div>
            ))}
          </div>
        </Card>
      </div>
    )}

    <!-- Manufacturing Tolerances (if provided) -->
    {tolerances && (
      <div class="mb-12">
        <Card variant="default" class="p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            {lang === 'en' ? tolerances.title : tolerances.titleZh}
          </h3>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                    {content.tableHeaders.parameter}
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                    {content.tableHeaders.value}
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {tolerances.items.map(item => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {lang === 'en' ? item.parameter : item.parameterZh}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-mono">
                      {item.tolerance}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      </div>
    )}

    <!-- Certifications (if provided) -->
    {certifications.length > 0 && (
      <div class="mb-12">
        <Card variant="default" class="p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-8 h-8 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
            {content.certifications}
          </h3>

          <div class="flex flex-wrap gap-3">
            {certifications.map(cert => (
              <Badge variant="success" class="text-sm font-semibold px-4 py-2">
                ✓ {cert}
              </Badge>
            ))}
          </div>
        </Card>
      </div>
    )}

    <!-- Important Note -->
    <div class="bg-blue-50 border-l-4 border-blue-500 rounded-r-xl p-6 mb-8">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div>
          <h4 class="text-lg font-bold text-blue-900 mb-2">{content.note}</h4>
          <p class="text-blue-800">{content.noteText}</p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-4 justify-center">
      <a 
        href="#"
        class="inline-flex items-center gap-2 px-8 py-4 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-all duration-300 shadow-lg hover:shadow-xl font-semibold"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        {content.downloadPdf}
      </a>
      
      <a 
        href={lang === 'en' ? '/en/contact?type=custom' : '/zh/contact?type=custom'}
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-blue-600 border-2 border-blue-600 rounded-xl hover:bg-blue-50 transition-all duration-300 font-semibold"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        {content.requestCustom}
      </a>
    </div>
  </div>
</section>
